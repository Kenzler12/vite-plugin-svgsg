{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",   
    "lib": ["ESnext"],                        
    "moduleResolution": "node",
    "moduleDetection": "force", 
    "outDir": "build",                    
    "skipLibCheck": true,                        
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "build"                                     
  ]
}
